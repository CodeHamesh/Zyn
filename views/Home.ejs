<% layout('./boilerplate.ejs') %>

  <body>
    <div class="mainmiddiv">
      <div class="homess">
        <% if (isAuthenticated) {%>
          <div class="loginuserdiv">
            <div class="loginuserimg">
              <img src="<%= profile. profilePicture %>" alt="" srcset="" loading="lazy">
            </div>
            <div class="loginusercreatepost">
              <p>Create post...</p>
            </div>
            <div class="postbtn">
              <button>Post</button>
            </div>
          </div>
          <%} %>
            <div class="postdiv">
              <div class="postdivnone">
                <span>Cancel</span>
                <p class="newpost">New Post</p>
                <p><i class="ri-heart-line"></i></p>
              </div>
              <form action="/home/post" method="post" enctype="multipart/form-data">
                <div class="postcontent">
                  <div class="content">
                    <div class="contentuser">
                      <div class="contentuserimg">
                        <img src="<%= profile. profilePicture %>" alt="Profile Picture" class="profile-pic"
                          loading="lazy">
                      </div>
                      <div class="contentuserpost">
                        <span class="username">
                          <%= userInfo.username %>
                        </span>
                        <textarea name="postcontent" id="" placeholder="Create Post..."></textarea>

                        <div class="input3">
                          <input type="file" id="input3" name="postimg" />
                          <label for="input3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                              id="upload">
                              <path
                                d="M5 10c-.6 0-1-.4-1-1 0-3.9 3.1-7 7-7 3 0 5.7 2 6.7 4.9.1.5-.1 1.1-.7 1.2-.5.2-1.1-.1-1.3-.6C15.1 5.4 13.2 4 11 4 8.2 4 6 6.2 6 9c0 .6-.4 1-1 1z">
                              </path>
                              <path
                                d="M18 18c-.6 0-1-.4-1-1s.4-1 1-1c2.2 0 4-1.8 4-4s-1.8-4-4-4c-.3 0-.7 0-1 .1-.5.1-1.1-.2-1.2-.7s.2-1.1.7-1.2c.5-.1 1-.2 1.5-.2 3.3 0 6 2.7 6 6s-2.7 6-6 6zM8 18H5c-.6 0-1-.4-1-1s.4-1 1-1h3c.6 0 1 .4 1 1s-.4 1-1 1z">
                              </path>
                              <path
                                d="M18 18h-2c-.6 0-1-.4-1-1s.4-1 1-1h2c.6 0 1 .4 1 1s-.4 1-1 1zM5 18c-2.8 0-5-2.2-5-5s2.2-5 5-5c.6 0 1 .4 1 1s-.4 1-1 1c-1.7 0-3 1.3-3 3s1.3 3 3 3c.6 0 1 .4 1 1s-.4 1-1 1zm7 4c-.6 0-1-.4-1-1V11c0-.6.4-1 1-1s1 .4 1 1v10c0 .6-.4 1-1 1z">
                              </path>
                              <path
                                d="M9 15c-.3 0-.5-.1-.7-.3-.4-.4-.4-1 0-1.4l3-3c.4-.4 1-.4 1.4 0s.4 1 0 1.4l-3 3c-.2.2-.4.3-.7.3z">
                              </path>
                              <path
                                d="M15 15c-.3 0-.5-.1-.7-.3l-3-3c-.4-.4-.4-1 0-1.4s1-.4 1.4 0l3 3c.4.4.4 1 0 1.4-.2.2-.4.3-.7.3z">
                              </path>
                            </svg>
                            <span>img</span>
                          </label>
                        </div>

                      </div>
                    </div>
                  </div>

                  <div class="postcontentpost">
                    <button type="submit">Post</button>
                  </div>
                </div>
              </form>
            </div>


            <div class="allpostsallusers">
              <div class="onepost" userId="<%= userId %>">

              </div>
            </div>

            <div class="allcomments">
              <div class="postdivnone">
                <span class="closecomments">Cancel</span>
                <p class="newcomment">Comments..</p>
                <p><i class="ri-heart-line"></i></p>
              </div>
              <div class="comment-author">

              </div>
              <div class="comment-input">
                <input type="text" class="commentinput" placeholder="Add a Comment" name="comment" required>
                <button class="comment-add">Post</button>
              </div>
              <div class="post-comments">




              </div>
            </div>


      </div>
    </div>
    <script src="/js/home.js"></script>
  </body>